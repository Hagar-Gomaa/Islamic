<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/default_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/head_sebhalogo"
            android:layout_width="154dp"
            android:layout_height="105dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/head_sebha_logo"
            app:layout_constraintEnd_toEndOf="@+id/body_sebhalogo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/body_sebhalogo"
            android:layout_width="218dp"
            android:layout_height="198dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="85dp"
            android:adjustViewBounds="true"
            android:src="@drawable/body_sebha_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/head_sebhalogo" />

        <TextView
            android:id="@+id/textnumber_sebha"
            android:layout_width="189dp"
            android:layout_height="57dp"
            android:layout_marginTop="7dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="15dp"
            android:text=" عدد التسبيحات "
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/body_sebhalogo" />

        <TextView
            android:id="@+id/number_sebha"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:background="#D6B483"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="15dp"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textnumber_sebha" />

        <TextView
            android:id="@+id/textsebha"
            android:layout_width="189dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:background="#AA782D"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="15dp"
            android:text="سبحان الله"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number_sebha" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>